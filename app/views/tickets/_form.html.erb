<%= form_with(model: ticket, local: true) do |f| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :code %>
    <%= f.text_field :code, required: true, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :host %>
    <%= f.collection_select :host_id, Host.all, :id, :to_s, {}, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :raw_logs %>
    <%= f.collection_select :raw_log_ids, RawLog.all, :id, :to_s, {}, class: 'form-control', multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
