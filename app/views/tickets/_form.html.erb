<%= form_with(model: ticket, local: true) do |f| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :maker %>
    <%= f.select :maker, [['Juniper', 'juniper'], ['Alcatel', 'alcatel'], ['Cisco', 'cisco']], required: true, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :code %>
    <%= f.text_field :code, required: true, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :hostname %>
    <%= f.text_field :hostname, required: true, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :normal_log_raw %>
    <%= f.collection_select :normal_log_raw_id, NormalLogRaw.all, :id, :to_s %>
  </div>

  <div>
    <%= f.label :anomaly_log_raw %>
    <%= f.collection_select :anomaly_log_raw_id, AnomalyLogRaw.all, :id, :to_s %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
