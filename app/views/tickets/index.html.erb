<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th><%= Ticket.human_attribute_name('code') %></th>
      <th><%= Host.model_name.human.titleize %></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.code, ticket %></td>
        <td><%= ticket.host %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
